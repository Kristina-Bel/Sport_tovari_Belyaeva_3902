<Window x:Class="Sport_tovari_Belyaeva_3902.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sport_tovari_Belyaeva_3902"
        mc:Ignorable="d"
        Title="Приложение Спортивные товары" Height="580" Width="1061">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="1013*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="FrmMain" Content="Frame" Margin="0,107,-48,-30" Navigated="FrmMain_Navigated" Grid.ColumnSpan="2"/>
        <StackPanel Margin="0,0,-12,323" Grid.ColumnSpan="2">
            <Grid Background="#FF76E383" Panel.ZIndex="-2">
                <Image HorizontalAlignment="Left" Height="82" Margin="47,0,0,0" VerticalAlignment="Top" Width="124" Source="/Resources/logo.png"/>
                <TextBlock  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding ElementName=FrmMain, Path=Content.Title}" VerticalAlignment="Center" Height="38" Width="691" FontFamily="Comic Sans MS" FontSize="30" Margin="264,0,0,0"/>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
